<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.DetailActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/zenbook_13"
            tools:ignore="ContentDescription"
            android:scaleType="fitCenter"
            android:background="@color/grey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/dark"
                android:textSize="24sp"
                android:fontFamily="@font/bold"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/price"
                android:textSize="20sp"
                android:textColor="@color/dark"
                android:fontFamily="@font/semi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description :"
                style="@style/TextSubs"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/regular"
                android:textSize="14sp"
                android:textColor="@color/muted"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specification :"
                style="@style/TextSubs"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <TableRow
                    style="@style/TabRow">
                    <TextView
                        android:text="Type"
                        style="@style/TextCol.Field"/>
                    <TextView
                        android:id="@+id/type"
                        android:text="UX480"
                        style="@style/TextCol.Record"/>
                </TableRow>
                <TableRow
                    style="@style/TabRow">
                    <TextView
                        android:text="OS"
                        style="@style/TextCol.Field"/>
                    <TextView
                        android:id="@+id/operating_system"
                        android:text="Windows 10 Pro"
                        style="@style/TextCol.Record"/>
                </TableRow>
                <TableRow
                    style="@style/TabRow">
                    <TextView
                        android:text="Processor"
                        style="@style/TextCol.Field"/>
                    <TextView
                        android:id="@+id/processor"
                        android:text="Intel® Core™ i7-10750H Processor 2.6 GHz (12M Cache, up to 5.0 GHz, 6 cores)"
                        style="@style/TextCol.Record"/>
                </TableRow>
                <TableRow
                    style="@style/TabRow">
                    <TextView
                        android:text="Graphics"
                        style="@style/TextCol.Field"/>
                    <TextView
                        android:id="@+id/graphics"
                        android:text="Intel® UHD Graphics 630, NVIDIA® GeForce® RTX 2060, 6GB GDDR6"
                        style="@style/TextCol.Record"/>
                </TableRow>
                <TableRow
                    style="@style/TabRow">
                    <TextView
                        android:text="Display"
                        style="@style/TextCol.Field"/>
                    <TextView
                        android:id="@+id/display"
                        android:text="14.0-inch, OLED, WQXGA+ (2880 x 1800) 16:10, 90Hz, Glossy display, 400nits, DCI-P3: 100%, Pantone Validated, Screen-to-body ratio: 86 ％"
                        style="@style/TextCol.Record"/>
                </TableRow>
                <TableRow
                    style="@style/TabRow">
                    <TextView
                        android:text="Memory"
                        style="@style/TextCol.Field"/>
                    <TextView
                        android:id="@+id/memory"
                        android:text="32GB DDR4 on board, Memory Max Up to:32GB"
                        style="@style/TextCol.Record"/>
                </TableRow>
                <TableRow
                    style="@style/TabRow">
                    <TextView
                        android:text="Storage"
                        style="@style/TextCol.Field"/>
                    <TextView
                        android:id="@+id/storage"
                        android:text="512GB M.2 NVMe™ PCIe® 3.0 Performance SSD"
                        style="@style/TextCol.Record"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>