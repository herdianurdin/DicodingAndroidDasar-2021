<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="TextSubs">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="TabRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    <style name="TextCol">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextCol.Field">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="TextCol.Record">
        <item name="android:textColor">@color/muted</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>